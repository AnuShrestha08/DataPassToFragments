<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/validationscreen"
    tools:context=".ValidateScreen">

    <TextView
        android:id="@+id/validateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/validationScreen"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button
        android:id="@+id/seeYouBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="See you soon"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/validateTitle"
        app:layout_constraintStart_toStartOf="@+id/validateTitle"
        app:layout_constraintTop_toBottomOf="@+id/validateTitle"
        app:layout_constraintVertical_bias="0.439"
        android:onClick="clickSeeU">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>